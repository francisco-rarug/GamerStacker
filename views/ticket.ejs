<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ticket de Compra</title>

    <style>
        body {
            background-color: #f4f4f9;
            padding: 20px;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 2.5rem;
        }

        ul {
            list-style-type: none;
            padding-left: 0;
        }

        li {
            padding: 10px;
            border-bottom: 1px solid #ddd;
            font-size: 1.2rem;
        }

        .total {
            font-size: 1.5rem;
            font-weight: bold;
        }

        #descargar-ticket {
            width: 100%;
            padding: 10px;
            background-color: #28a745;
            color: white;
            font-size: 1.2rem;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        #descargar-ticket:hover {
            background-color: #218838;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .footer {
            text-align: center;
            margin-top: 30px;
            font-size: 1rem;
            color: #555;
        }
    </style>
</head>

<body>

    <div class="container">
        <h1>Resumen de tu Compra</h1>
        <ul>
            <% carrito.forEach((producto) => { %>
                <li>
                    <strong><%= producto.nombre %></strong> - 
                    <%= new Intl.NumberFormat('es-AR', { style: 'currency', currency: 'ARS' }).format(producto.precio) %> 
                    (x<%= producto.cantidad %>)
                </li>
            <% }) %>
        </ul>
        <hr>
        <p class="total">Total: <%= new Intl.NumberFormat('es-AR', { style: 'currency', currency: 'ARS' }).format(total) %></p>

        <button id="descargar-ticket" class="btn btn-success">Descargar Ticket</button>
    </div>

    <div id="carrito-data" data-carrito='<%= JSON.stringify(carrito) %>' data-total='<%= total %>'></div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const carrito = JSON.parse(document.getElementById('carrito-data').getAttribute('data-carrito'));
            const total = parseFloat(document.getElementById('carrito-data').getAttribute('data-total'));

            console.log("Carrito:", carrito);  
            console.log("Total:", total);  

            document.getElementById('descargar-ticket').addEventListener('click', () => {
                const { jsPDF } = window.jspdf;
                const doc = new jsPDF();
                doc.setFontSize(16);
                doc.text('Ticket de Compra GamerStacker', 10, 10);

                let posicionY = 20;

                if (carrito.length === 0) {
                    alert("El carrito está vacío. No hay productos para mostrar.");
                    return;
                }

                carrito.forEach((producto) => {
                    doc.text('Producto: ' + producto.nombre, 10, posicionY);
                    doc.text('Cantidad: ' + producto.cantidad, 10, posicionY + 5);
                    doc.text('Precio por unidad: ' + new Intl.NumberFormat('es-AR', { style: 'currency', currency: 'ARS' }).format(producto.precio), 10, posicionY + 10);
                    posicionY += 20;
                });

                doc.text('-------------------------', 10, posicionY);
                doc.text('Total: ' + new Intl.NumberFormat("es-AR", { style: "currency", currency: "ARS" }).format(total), 10, posicionY + 10);
                doc.save('ticket_compra.pdf');
            });
        });
    </script>
</body>

</html>
